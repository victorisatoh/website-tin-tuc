<!-- start sliderSection -->
<section id="sliderSection">
  <div class="row">
    <!-- slick_slider -->
    <div class="col-lg-8 col-md-8 col-sm-8">
      <div class="slick_slider">
        <% categoriesWithCorrespondingArticles.forEach(set => { %>
          <div class="single_iteam">
            <a href="/home/<%= set.latestArticle.ctgSlug %>/<%= set.latestArticle.slug %>">
              <img src="<%= set.latestArticle.coverImagePath %>"/>
            </a>
            <div class="slider_article">
              <h2>
                <a class="slider_tittle" href="/home/<%= set.latestArticle.ctgSlug %>/<%= set.latestArticle.slug %>">
                  <%= set.latestArticle.title %>
                </a>
              </h2>
              <p>
                <%= set.latestArticle.description %>
              </p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- latest-post -->
    <div class="col-lg-4 col-md-4 col-sm-4">
      <%-include('../partials/latest-post')%>
    </div>
  </div>
</section>
<!-- end sliderSection -->

<!-- start contentSection -->
<section id="contentSection">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
      <div class="left_content">
        <!-- Bắt đầu 1 category nhỏ -->
        <% categoriesWithCorrespondingArticles.forEach(set => { %>
        <% if (set.latestArticle) { %>
        <div class="single_post_content">
          <h2>
            <a href="/home/<%= set.category.categorySlug %>">
              <span><%= set.category.title %></span>
            </a>
          </h2>

          <!-- Pic lớn chứa latest article -->
          <% if (set.latestArticle) { %>
          <div class="single_post_content_left">
            <ul class="business_catgnav wow fadeInDown">
              <li>
                <figure class="bsbig_fig">
                  <a href="home/<%= set.category.categorySlug %>/<%= set.latestArticle.slug %>" class="featured_img">
                    <% if (set.latestArticle.coverImagePath != null) { %>
                    <img src="<%= set.latestArticle.coverImagePath %>" />
                    <% } else { %>
                    <img src="images/post_img1.jpg">
                    <% } %>
                    <span class="overlay"></span>
                  </a>
                  <figcaption>
                    <a
                      href="home/<%= set.category.categorySlug %>/<%= set.latestArticle.slug %>"><%= set.latestArticle.title %></a>
                  </figcaption>
                  <p>
                    <%= set.latestArticle.description %>
                  </p>
                </figure>
              </li>
            </ul>
          </div>
          <% } %>

          <!-- danh sách các article nhỏ -->
          <% if (set.rightArticleList) { %>
          <div class="single_post_content_right">
            <ul class="spost_nav">
              <% set.rightArticleList.forEach(article => { %>
              <li>
                <div class="media wow fadeInDown">
                  <a href="/home/<%= set.category.categorySlug %>/<%= article.slug %>" class="media-left">
                    <% if (article.coverImagePath != null) { %>
                    <img alt="" src="<%= article.coverImagePath %>" />
                    <% } else { %>
                    <img src="images/post_img1.jpg">
                    <% } %>
                  </a>
                  <div class="media-body">
                    <a href="/home/<%= set.category.categorySlug %>/<%= article.slug %>" class="catg_title">
                      <%= article.title %></a>
                  </div>
                </div>
              </li>
              <% }) %>
            </ul>
          </div>
          <% } %>
        </div>
        <% } %> <% }) %>
      </div>
    </div>

